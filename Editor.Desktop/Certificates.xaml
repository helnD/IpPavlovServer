<UserControl x:Class="Editor.Desktop.Certificates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Editor.Desktop"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid
            ItemsSource="{Binding Certificates, IsAsync=True}"
            AutoGenerateColumns="False"
            Margin="5"
            SelectedItem="{Binding SelectedCertificate}"
            >

            <DataGrid.Columns>
                <DataGridTextColumn Width="10*" Header="ID" IsReadOnly="True" Binding="{Binding Id}"/>
                <DataGridTextColumn Width="70*" Header="Описание" Binding="{Binding Description}"/>
                <DataGridTextColumn Width="20*" Header="Изображение" Binding="{Binding Image.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Margin="5" Grid.Column="1">
            <Label>Изображение сертификата</Label>
            <Image Source="{Binding ImageUri}"/>
        </StackPanel>
    </Grid>
</UserControl>
